<% if user_signed_in? %>
<div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header bg-info">
        <h5 class="modal-title text-white" id="exampleModalScrollableTitle">Favorite Recipes</h5>
        <button type="button" class="close btn btn-info" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body p-3">
        
      <% current_user.recipe_users.each do |favorite| %>
        <%= link_to favorite.recipe, :class => "text-decoration-none text-dark" do %>
        <div id= "favRecipe" class="border mb-4">
        <div class="row">
        <div class="col-4">
        <% if favorite.recipe.image.attached? %>
        <%= image_tag favorite.recipe.image, style: "width:10em; height:10em", alt: "Recipes" %>
        <% else %>
        <img src="https://via.placeholder.com/150" style: "width:10em; height:10em", alt="Recipes">
        <% end %>
        </div>
        <div class="col-8 d-flex justify-content-center align-items-center">
        <h6 class="d-inline "> <%= favorite.recipe.title %></h6>
        </div>
        </div>
        </div>
       <% end %>
       <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
