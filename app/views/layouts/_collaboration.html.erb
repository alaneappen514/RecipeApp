<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header bg-info">
        <h5 class="modal-title text-white" id="exampleModalLabel">Contributors</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <% @recipe.collaborations.each do |collab| %>
        <div class="border shadow mb-3 p-3 d-flex justify-content-between collaborators" id="collab-<%= collab.id %>">
        <h6 class="d-inline text-dark mt-2 email"> <%= collab.user.email %></h6>

        <% if @recipe.user == current_user %>
        <%= link_to recipe_collaboration_path(@recipe, collab), class:"collabRemove", method: :delete, data: { confirm: 'Are you sure you want to remove this user?'},  remote: true do %>
        <button class="btn btn-outline-danger">Remove</button>
        <% end %>
        <% end %>

        </div>
       <% end %>
      </div>
    </div>
  </div>
</div>
