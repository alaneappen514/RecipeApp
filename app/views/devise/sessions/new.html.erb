<% flash.each do |type, msg| %>
  <div class= "alert alert-danger text-center mb-0">
    <h6><%= msg %></h6>
  </div>
<% end %>

<div>
<%= image_tag("board.jpg", :id => "bg", :alt => "bgImage") %>
<div id= "login-content">
<h2 class = "text-white text-center">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <h6 class="text-white"><%= f.label :email %></h6>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <h6 class="text-white"><%= f.label :password %><?h6>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field d-flex">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, :class => "text-white ml-1" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", :class => "btn btn-info" %>
  </div>
<% end %>

<div class="text-center mt-3">
<%= render "devise/shared/links"%>
</div>
<div class="d-flex justify-content-center align-items-center mt-5">
<i class="fas fa-utensils text-white fa-2x mr-2"></i>
<%= link_to recipes_path do %>
<div class="navbar-brand text-white">RT</div>
<% end %>
</div>
</div>
</div>

